modules = ["python-3.11"]
run = "streamlit run app.py"

[nix]
channel = "stable-25_05"
packages = ["freetype", "geckodriver", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run app.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PSX Stock Forecasting App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow]]
name = "PSX Stock Forecasting App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install beautifulsoup4 plotly prophet streamlit-autorefresh && streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "install_dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add plotly prophet beautifulsoup4 streamlit-autorefresh requests"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["web_scraper==1.0.0"]
